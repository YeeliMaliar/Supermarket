@model Supermarket.Models.AddStock

@{
    ViewBag.Title = "Add Stock";
}

<h1>Add Stock</h1>

@using (Html.BeginForm("AddStock", "Manager"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.product.productID)
    @Html.HiddenFor(model => model.product.stock)
    @Html.HiddenFor(model => model.product.name)
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <br />
        @Html.DisplayNameFor(model => model.product.name)

        @Html.DisplayFor(model => model.product.name)
        <br />
        @Html.DisplayNameFor(model => model.product.stock)

        @Html.DisplayFor(model => model.product.stock)

        <div class="form-group">
            add:
            @Html.EditorFor(model => model.added, new { htmlAttributes = new { @class = "form-control", min = 0, value = 0 } })
            @Html.ValidationMessageFor(model => model.added, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default btn-outline-primary" />
            </div>
        </div>
        <div>
            @Html.ActionLink("Back to List", "Products")
        </div>
    </div>
}
