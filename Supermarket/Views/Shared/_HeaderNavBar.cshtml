
<nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">

    @*logo*@
    <a class="navbar-brand mr-auto" href="/">
        <img src="~/Content/uokpl.rs-earth-png-4045898.png" width="30" height="30" alt="logo" loading="lazy">
        <span class="navbar-brand mb-0 h1" id="top-brand-name">WebApplication</span>
    </a>

    @*cart, visble only on mobile*@
    <a class="navbar-brand d-md-none" href="@Url.Action("Index", "ShoppingCart")">
        <i class="fas fa-shopping-cart"></i>
    </a>

    @*toggle botton, visible only on mobile*@
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    @*colapsable nav contant*@
    <div class="collapse navbar-collapse" id="navbarSupportedContent">

        @*Search bar*@
        @*@using (Html.BeginForm("action", "controller", FormMethod.Post, new { @class = "navbar-form navbar-left", role = "search" }))
        {
        }*@
        <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" style="width: 300px">
            <button class="btn btn-outline-info my-2 my-sm-0" type="submit"><i class="fas fa-search"></i></button>
        </form>

        @*links*@
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("About", "Home")">About</a>
            </li>
       
            @if (User.Identity.IsAuthenticated)
            {
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-center text-uppercase" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @User.Identity.Name
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="dropdown-item" href="@Url.Action("Index", "Manager")">Manager page</a>
                        <div class="dropdown-divider"></div>
                    }
                    <a class="text-danger dropdown-item" href="@Url.Action("Logout", "Account")">Logout</a>
                </div>
            </li>

            }
            else
            {
            <li class="nav-item">
                <a class="nav-link float-left" href="@Url.Action("Register", "Account")">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link float-left" href="@Url.Action("Login", "Account")">Login</a>
            </li>
            }
        </ul>
    </div>

    @*cart, visible only on desktop*@
    <a class="navbar-brand d-md-block d-none" href="@Url.Action("Index", "Shoppingcart")">
        <i class="fas fa-shopping-cart"></i>
    </a>

</nav>
